@model CineTicket.Models.ShowingViewModel

@{
    ViewData["Title"] = "BookTicket";
    var maxSeats = Model.RemainingSeats < 12 ? Model.RemainingSeats : 12;
}

<!--<h2>BookTicket</h2>-->

<h3>Book ticket for: @Model.MovieTitle </h3>

<span>Seats remaining for this showing: @Model.RemainingSeats</span>
<p>RunningTime: @Model.MovieRunningMinutes minutes</p>

@using (Html.BeginForm())
{
    <input name="ShowingID" type="hidden" value="@Model.ID" />
    <label for="NumberOfSeats"># seats</label>
    <input name="NumberOfSeats" type="number" value="1" min="1" max="@maxSeats" />
    <input type="submit" class="btn btn-default" value="Book"/>
}
